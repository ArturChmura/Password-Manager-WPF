<UserControl x:Class="pwśg_wpf_lab2.UserControlStart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pwśg_wpf_lab2"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d" FontSize="14"
        >
    <UserControl.Resources>

    </UserControl.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--                 row1                -->
        <TextBlock Text="Password:" Grid.Column=" 0" Grid.Row="1" HorizontalAlignment="Center"/>

        <!--                 row2                -->

        <PasswordBox x:Name="passwordBox"  Grid.Column=" 0" Grid.Row="2"  Width="250" PasswordChar="*"/>
        <!--                 row3                -->

        <Button  Grid.Column=" 0" Grid.Row="3"  Width="250" Click="Button_Click" >Unlock</Button>

    </Grid>
</UserControl>
